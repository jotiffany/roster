gem 'autoprefixer-rails', '~> 2.1.1'
gem 'bootstrap-datepicker-rails', '~> 1.3.0.2'
gem 'jquery-datatables-rails', '~> 2.2.3'
gem 'rspec-rails', '~> 3.0.1'
gem 'rubocop', '~> 0.24.1', :require => false
gem 'haml-lint', '~> 0.6.0', :require => false
gem 'faker', '~> 1.4.2'
